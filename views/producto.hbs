

<div class="container-fluid bg-light p-2 mb-5 text-dark fw-bold">
    <div class="container">
        <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item active" aria-current="page">
                <a class="text-dark" href="/">Home</a>
            </li>
            <li class="breadcrumb-item">
                <a class="text-dark" href="/productos">Productos</a>
            </li>
            <li class="breadcrumb-item">
                {{producto.categoria}}
            </li>
        </ol>
    </nav>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-5">
            <a data-fancybox="galeriaProd" href="/images/{{producto.imagen}}">
                <img src="/images/{{producto.imagen}}" class="img-fluid w-100" alt="">
            </a>
        </div>
        <div class="col-2"></div>
        <div class="col-4">
            <h1>{{producto.nombre}}</h1>
            <hr>
            <p>{{producto.descripcion}}</p>
            <hr>
            <h2 class="bg-info">$ {{producto.precio}}.-</h2>

            {{!--#if producto.stock --}}
                {{!--<span class="badge bg-success">Disponible: {{producto.stock}}</span>
                <button class="btn btn-primary"> Comprar</button> --}}
            {{!--else}}
                <span class="badge bg-danger">Sin stock</span>
                <button class="btn btn-info" disabled="disabled">Comprar</button> --}}   
            {{!--/if--}}
        </div>

    </div>
    <hr>

    <div class="alert alert-success">
        {{legales}}
    </div>
    <hr>
    <div class="alert alert-success">
        {{envios}}
    </div>

</div>